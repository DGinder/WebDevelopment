<% include ../partials/header %>
<div class="container">
    <div class="row  justify-content-center">
        <h1 class="text-center col-12">Add New Comment to <%= campground.name %></h1>
        
        <div class="newCamp container col-md-8 col-lg-6 col-10" style="margin: 0 auto;">
            <form class="col-12" action="/campgrounds/<%= campground._id %>/comments/" method="post">
                <div class="form-group">
                        <input class="form-control" type="text" name="comment[author]" placeholder="Author">
                </div>
                <div class="form-group">
                        <textarea class="form-control" name="comment[text]" id="" rows="5" placeholder="Text"></textarea>
                </div>
                <div class="form-group">
                        <button class="btn-block btn btn-primary newCamp">Submit!</button>
                </div>
            </form>
            <a class="col-12" href="/campgrounds/<%= campground._id %>">Go Back</a>
        </div>
        
    </div>

</div>
<% include ../partials/footer %>