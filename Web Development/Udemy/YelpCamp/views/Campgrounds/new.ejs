<% include ../partials/header %>
<div class="container">
    <div class="row  justify-content-center">
        <h1 class="text-center col-12">Create a New Campground</h1>
        
        <div class="newCamp newCamp container col-md-8 col-lg-6 col-10" style="width: 40%; margin: 0 auto;">
            <form class="col-12" action="/campgrounds" method="post">
                <div class="form-group">
                        <input class="form-control" type="text" name="name" placeholder="Name">
                </div>
                <div class="form-group">
                        <input class="form-control" type="text" name="image" placeholder="Image URL">
                </div>
                <div class="form-group">
                        <input class="form-control" type="number" name="price" placeholder="Price" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                        <input class="form-control" type="text" name="description" placeholder="Description">
                </div>
                <div class="form-group">
                        <button class="btn-block btn btn-primary newCamp">Submit!</button>
                </div>
            </form>
            <a class="col-12" href="/campgrounds">Go Back</a>
        </div>
        
    </div>

</div>
<% include ../partials/footer %>