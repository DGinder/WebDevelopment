<% include ../partials/header %>


<div class="container">
    <header class="jumbotron text-center text-lg-left">
        <h1>Welcome to Yelpcamp</h1>
        <p>View our hand-picked campgrounds from all over the world!</p>
        <p>
            <a  class="btn btn-primary brn-large" href="/campgrounds/new">Add New Campgrounds</a>
        </p>
    </header>
    <div class="row imgfix text-center">
        <div class="col-lg-12">
            <h3>Our Most Popular Camgrounds</h3>
        </div>
        <% data.forEach(campground => { %>
            <div class="col-xl-4 col-md-6">
                <div class="img-thumbnail">
                    <img class=" img-fluid" src="<%= campground.image %>" alt="">
                    <div class="caption">
                        <h4><%= campground.name %></h4>
                    </div>
                    <p>
                        <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% }); %>

    </div>
</div>
<% include ../partials/footer %>