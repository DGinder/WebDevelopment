<% include ../partials/header %>
<div class="container">
    <div class="row  justify-content-center">
        <h1 class="text-center col-12">Edit <%= campground.name %></h1>
        
        <div class="newCamp newCamp container col-md-8 col-lg-6 col-10" style="width: 40%; margin: 0 auto;">
            <form class="col-12" action="/campgrounds/<%= campground._id %>/?_method=PUT" method="post">
                <div class="form-group">
                        <input class="form-control" type="text" name="campground[name]" placeholder="Name" value="<%= campground.name %>">
                </div>
                <div class="form-group">
                        <input class="form-control" type="text" name="campground[image]" placeholder="Image" value="<%= campground.image %>">
                </div>
                <div class="form-group">
                        <input class="form-control" type="text" name="campground[description]" placeholder="Description" value="<%= campground.description %>">
                </div>
                <div class="form-group">
                        <button class="btn-block btn btn-primary newCamp">Submit!</button>
                </div>
            </form>
            <a class="col-12" href="/campgrounds/<%= campground._id %>">Go Back</a>
        </div>
        
    </div>

</div>
<% include ../partials/footer %>